{
  "name": "trading-backtest-app",
  "version": "1.0.0",
  "description": "Trading Backtest Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "setup:win": "scripts/setup.bat",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python3 -m venv venv && ./venv/bin/pip install --upgrade pip setuptools wheel && ./venv/bin/pip install -r requirements.txt && ./venv/bin/python server.py",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && python3 -m venv venv && ./venv/bin/pip install --upgrade pip setuptools wheel && ./venv/bin/pip install -r requirements.txt",
    "build:static": "cd frontend && npm run build",
    "clean:venv": "cd backend && rm -rf venv",
    "package": "npm run build && npx electron-builder",
    "dist": "npm run build && npx electron-builder --publish=never",
    "start": "electron ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tradingbacktest.app",
    "productName": "Trading Backtest",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/out/**/*",
      "backend/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "trading",
    "backtest",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT"
} 